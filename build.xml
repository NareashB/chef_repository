<?xml version ="1.0"?>
<project name ="project1" default ="war">
<target name ="clean">
<delete dir = "dest"/>
</target>
<target name ="init" depends ="clean">
<mkdir dir ="dest/classes"/>
<mkdir dir ="dest/jar"/>
<mkdir dir ="dest/war"/>
<mkdir dir ="dest/ear"/>
</target>
<target name ="compile" depends="init">
<javac srcdir="src" destdir ="dest/classes"/>
</target>
<target name ="jar" depends="compile">
<jar destfile ="dest/jar/moni.jar" basedir="dest/classes"/>
</target>
<target name ="war" depends="jar">
<war webxml="webcontent/WEB-INF/web.xml" destfile="dest/war/AntExample.war">

<fileset dir="webcontent"/>

</war>
</target>
</project>